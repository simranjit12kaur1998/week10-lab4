<!-- Define a function to render the feedback -->
<% function renderFeedback(feedback) { %>
  <div class="item-details">
    <article>
      <h2>Sender: <%= feedback.sender %></h2>
      <div><%= feedback.message %></div>
      <p>
        <strong>Rating:</strong> <%= feedback.rating %>
      </p>
  
    <!-- Update button -->
    <form
    class="action-form"
    method="GET"
    action="/single-feedback/update/<%= feedback._id %>"
  >
    <button type="submit" class="update">update</button>
  </form>
  
  !-- Delete button -->
  <form
    class="action-form"
    method="POST"
    action="/single-feedback/<%= feedback._id %>?_method=DELETE"
  >
    <button type="submit">delete</button>
  </form>
</article>
</div>
<% } %>

    
<% 
function formatDate(dateString) {
    const date = new Date(dateString);
    // Format the date as desired (e.g., YYYY-MM-DD)
    const formattedDate = date.toLocaleDateString('fi-FI', { year: 'numeric', month: 'long', day: 'numeric' });
    return formattedDate;
} 
%>

<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: feedback.title }) %>
  <body>
    <%- include('partials/navbar.ejs') %>
    
    <%- include('partials/single.ejs') %>
    <div class="content">
      <div class="home">
        <div class="item-list">
          <% if (feedback) { %> <%= renderFeedback(feedback) %> <% } else { %>
          <p>No feedback found.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>