<!-- addfeedback.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Add Feedback" }) %>

  <body>
    <%- include('partials/navbar') %>

    <div class="content">
      <div class="create">
        <h2>Add a New Feedback</h2>
        <form action="/addFeedback" method="POST">
          <label>Sender:</label
          ><input type="text" value="" id="sender" name="sender" required />

          <label for="message">Message:</label>
          <textarea
            value=""
            id="message"
            name="message"
            rows="4"
            required
          ></textarea
          ><br />

          <label for="rating">Rating:</label>
          <input type="number" id="rating" name="rating" required /><br />

          <button type="submit">Add Feedback</button>
        </form>
      </div>
    </div>
  </body>
</html>