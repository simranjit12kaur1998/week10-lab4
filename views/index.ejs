<% function renderFeedback(feedback) { %>
  <div class="item-preview">
    <a href="/single-feedback/<%= feedback._id %>">
      <h2>Sender: <%= feedback.sender %></h2>
      <p>Written by Simranjit
      </p>
    </a>
  </div>
<% } %>

<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Home page" }) %>

  <body>
    <%- include('partials/navbar.ejs') %>
    <%- include('partials/hero.ejs') %>
    <div class="content">
      <div class="home">
        <div class="item-list">
          <% if (feedbacks.length > 0) { %>
          <!-- Call the renderFeedback function for each feedback -->
          <% feedbacks.forEach(renderFeedback); %> <% } else { %>
          <p>No feedbacks found.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>